# ================================
# RETRO-PC STORE - ENVIRONMENT VARIABLES
# ================================
# Скопируйте этот файл в .env и добавьте ваши реальные значения
# Никогда не коммитьте .env файл в Git!

# ================================
# EBAY API CONFIGURATION
# ================================

# eBay Application ID (обязательный для полной функциональности)
# Получите на: https://developer.ebay.com/
# Инструкции: https://developer.ebay.com/DevZone/account/
EBAY_APP_ID=ваш_ebay_app_id_здесь

# eBay API Environment (sandbox или production)
EBAY_ENV=production

# eBay API Version
EBAY_API_VERSION=1.0.0

# ================================
# APPLICATION SETTINGS
# ================================

# Environment (development, staging, production)
NODE_ENV=development

# Application URL (для CORS и редиректов)
APP_URL=http://localhost:8888

# API Base URL
API_BASE_URL=/.netlify/functions

# ================================
# FEATURE FLAGS
# ================================

# Включить кэширование API ответов
ENABLE_CACHING=true

# Время жизни кэша в миллисекундах (24 часа по умолчанию)
CACHE_DURATION=86400000

# Максимальное количество товаров для загрузки
MAX_PRODUCTS=12

# Задержка между API запросами (мс)
API_DELAY=600

# Включить fallback данные при ошибках API
ENABLE_FALLBACK=true

# ================================
# DEBUGGING & MONITORING
# ================================

# Уровень логирования (error, warn, info, debug)
LOG_LEVEL=info

# Включить детальные логи API запросов
DEBUG_API=false

# Включить performance мониторинг
ENABLE_PERFORMANCE_MONITORING=true

# Включить error tracking
ENABLE_ERROR_TRACKING=true

# ================================
# SECURITY SETTINGS
# ================================

# Разрешенные домены для CORS (через запятую)
ALLOWED_ORIGINS=http://localhost:8888,https://tiger884.github.io

# API Rate Limiting (запросов в минуту)
RATE_LIMIT=60

# Timeout для API запросов (секунды)
API_TIMEOUT=30

# ================================
# EXTERNAL SERVICES (OPTIONAL)
# ================================

# Google Analytics ID (для.analytics)
GA_TRACKING_ID=G-L5M93HJZ91

# Включить Google Analytics tracking
ENABLE_ANALYTICS=true

# Включить Enhanced Ecommerce tracking (для будущего)
ENABLE_ECOMMERCE_TRACKING=false

# Sentry DSN (для error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Netlify Site ID
# NETLIFY_SITE_ID=your-netlify-site-id

# ================================
# CUSTOMIZATION
# ================================

# Название сайта
SITE_NAME=Retro-PC Store

# Описание сайта
SITE_DESCRIPTION=Vintage computer components store with retro 80s terminal design

# Контактный email
CONTACT_EMAIL=info@retro-pc-store.com

# GitHub репозиторий
GITHUB_REPO=https://github.com/Tiger884/RETRO-PC-STORE

# ================================
# ADVANCED SETTINGS
# ================================

# Включить service worker для offline функциональности
# ENABLE_SERVICE_WORKER=false

# Включить web push notifications
# ENABLE_PUSH_NOTIFICATIONS=false

# CDN URL для статичных ресурсов
# CDN_URL=https://cdn.retro-pc-store.com

# ================================
# DEVELOPMENT ONLY
# ================================

# Показывать детальные ошибки (только для development)
SHOW_DETAILED_ERRORS=true

# Включить hot reload
HOT_RELOAD=true

# Эмулировать медленное соединение (мс задержки)
# SIMULATE_SLOW_CONNECTION=2000

# ================================
# ПРИМЕРЫ КОНФИГУРАЦИЙ
# ================================

# Для разработки:
# NODE_ENV=development
# EBAY_ENV=sandbox
# DEBUG_API=true
# LOG_LEVEL=debug

# Для production:
# NODE_ENV=production
# EBAY_ENV=production
# DEBUG_API=false
# LOG_LEVEL=error

# ================================
# БЕЗОПАСНОСТЬ
# ================================
# 
# ВАЖНО:
# 1. Никогда не коммитьте файл .env в репозиторий
# 2. Используйте разные ключи для development и production
# 3. Регулярно обновляйте API ключи
# 4. Ограничивайте права доступа для API ключей
# 5. Мониторьте использование API ключей
#
# Для Netlify используйте Environment Variables в настройках сайта:
# https://docs.netlify.com/configure-builds/environment-variables