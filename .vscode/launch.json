{
    "version": "0.2.0",
    "configurations": [
        {
            "name": " Запустить сайт (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5500/index.html",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--auto-open-devtools-for-tabs"
            ]
        },
        {
            "name": " Запустить тесты (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5500/test.html",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--auto-open-devtools-for-tabs"
            ]
        },
        {
            "name": " Открыть файл напрямую",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--allow-file-access-from-files"
            ]
        }
    ]
}
